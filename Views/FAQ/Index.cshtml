@{
    ViewData["Title"] = "FAQs Management";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/lib/metronic/plugins/custom/datatables/datatables.bundle.css">
    <style>
        .card {
            margin-bottom: 20px;
        }
        .faq-question {
            font-weight: 500;
            color: #3F4254;
        }
        .faq-answer {
            color: #7E8299;
            max-width: 400px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .text-action {
            color: #3699FF;
            cursor: pointer;
            font-weight: 500;
            margin-right: 15px;
        }
        .text-action.delete {
            color: #F64E60;
        }
        .text-action:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="card">
    <!-- Card Header -->
    <div class="card-header border-0 pt-6">
        <div class="card-title">
            <!-- Search -->
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black"></rect>
                        <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black"></path>
                    </svg>
                </span>
                <input type="text" data-kt-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search FAQs" />
            </div>
        </div>
        <!-- Toolbar -->
        <div class="card-toolbar">
            <div class="d-flex justify-content-end" data-kt-faq-table-toolbar="base">
                <!-- Filter -->
                <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                    <span class="svg-icon svg-icon-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z" fill="black"></path>
                        </svg>
                    </span>
                    Filter
                </button>
                <!-- Filter Menu -->
                <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true" id="kt-toolbar-filter">
                    <div class="px-7 py-5">
                        <div class="fs-4 text-dark fw-bolder">Filter Options</div>
                    </div>
                    <div class="separator border-gray-200"></div>
                    <div class="px-7 py-5">
                        <!-- Agency Filter -->
                        <div class="mb-10">
                            <label class="form-label fs-5 fw-bold mb-3">Agency:</label>
                            <select class="form-select form-select-solid fw-bolder" data-kt-select2="true" 
                                    data-placeholder="Select Agency" data-allow-clear="true"
                                    data-kt-faq-table-filter="agency_id">
                                <option></option>
                                <!-- Dynamically loaded -->
                            </select>
                        </div>
                        <!-- Actions -->
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-light btn-active-light-primary me-2" 
                                    data-kt-menu-dismiss="true" data-kt-faq-table-filter="reset">
                                Reset
                            </button>
                            <button type="submit" class="btn btn-primary" data-kt-menu-dismiss="true" 
                                    data-kt-faq-table-filter="filter">
                                Apply
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Add FAQ -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_faq">
                    Add FAQ
                </button>
            </div>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body pt-0">
        <div class="table-responsive">
            <table id="data-table" class="table table-row-bordered table-stripped align-middle fs-6 gs-7 gy-5" style="width:100%">
                <thead>
                    <tr>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Agency</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add FAQ Modal -->
<div class="modal fade" id="kt_modal_add_faq" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder">Add New FAQ</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body mx-5 mx-xl-15 my-7">
                <form id="kt_modal_add_faq_form" method="post" class="form">
                    <div class="d-flex flex-column scroll-y me-n7 pe-7">
                        <!-- Question -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="required fw-bold fs-6 mb-2">Question</label>
                                <input type="text" name="Question" class="form-control form-control-solid" placeholder="e.g., How do I reset my password?" required />
                            </div>
                        </div>
                        <!-- Answer -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="required fw-bold fs-6 mb-2">Answer</label>
                                <textarea name="Answer" class="form-control form-control-solid" rows="4" placeholder="Detailed answer..." required></textarea>
                            </div>
                        </div>
                        <!-- Agency -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="required fw-bold fs-6 mb-2">Agency</label>
                                <select name="AgencyId" class="form-select form-select-solid fw-bolder" 
                                        data-kt-select2="true" data-placeholder="Select Agency" required>
                                    <option></option>
                                    <!-- Dynamically loaded -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Discard</button>
                        <button type="submit" id="kt_add_faq_submit_button" class="btn btn-primary">
                            <span class="indicator-label">Submit</span>
                            <span class="indicator-progress">Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit FAQ Modal -->
<div class="modal fade" id="kt_modal_edit_faq" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder">Edit FAQ</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <form id="kt_modal_edit_faq_form" class="form">
                    <input type="hidden" name="Id" id="editFaqId" />
                    <div class="d-flex flex-column scroll-y me-n7 pe-7">
                        <!-- Question -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="required fw-bold fs-6 mb-2">Question</label>
                                <input type="text" name="Question" class="form-control form-control-solid" required />
                            </div>
                        </div>
                        <!-- Answer -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="required fw-bold fs-6 mb-2">Answer</label>
                                <textarea name="Answer" class="form-control form-control-solid" rows="4" required></textarea>
                            </div>
                        </div>
                        <!-- Agency (Read-only) -->
                        <div class="row g-9 mb-7">
                            <div class="col-md-12 fv-row">
                                <label class="fw-bold fs-6 mb-2">Agency</label>
                                <input type="text" id="editFaqAgency" class="form-control form-control-solid" disabled />
                            </div>
                        </div>
                    </div>
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" id="kt_edit_faq_submit_button" class="btn btn-primary">
                            <span class="indicator-label">Save Changes</span>
                            <span class="indicator-progress">Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/metronic/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/dataTable/init.js"></script>
    <script src="~/js/forms/form-submit-handler.js"></script>
    <script src="~/js/forms/ajaxSelect2Handler.js"></script>
    <script>
        $(document).ready(function () {
            let dataTable;

            // Initialize DataTable
            function initializeFaqsDataTable() {
                dataTable = new DataTableSSR("/api/FAQ", [
                    { 
                        data: "question", 
                        name: "Question",
                        class: "faq-question",
                        render: (data) => data || "—"
                    },
                    { 
                        data: "answer", 
                        name: "Answer",
                        class: "faq-answer",
                        render: (data) => data || "—"
                    },
                    { 
                        data: "agencyName", 
                        name: "Agency",
                        render: (data) => data || "—"
                    },
                    { 
                        data: null, 
                        class: "text-end",
                        render: (data) => `
                            <span class="text-action" data-kt-docs-table-filter="edit_row" item-id="${data.id}">
                                Edit
                            </span>
                            <span class="text-action delete" data-kt-docs-table-filter="delete_row" item-id="${data.id}">
                                Delete
                            </span>
                        `
                    }
                ]);

                dataTable.initDataTableObj("#data-table", null, null, [{
                    event: "draw",
                    action: () => {
                        // Attach edit event to text links
                        $("[data-kt-docs-table-filter='edit_row']").on("click", function (e) {
                            e.preventDefault();
                            const faqId = $(this).attr("item-id");
                            fetchAndPopulateEditModal(faqId);
                            $("#kt_modal_edit_faq").modal("show");
                        });

                        // Attach delete event to text links
                        $("[data-kt-docs-table-filter='delete_row']").on("click", function (e) {
                            e.preventDefault();
                            const faqId = $(this).attr("item-id");
                            
                            Swal.fire({
                                title: "Are you sure?",
                                text: "This FAQ will be permanently deleted!",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonText: "Yes, delete it!",
                                cancelButtonText: "No, cancel!",
                                reverseButtons: true
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $.ajax({
                                        url: `/api/FAQ/${faqId}`,
                                        type: "DELETE",
                                        success: function() {
                                            Swal.fire("Deleted!", "FAQ has been deleted.", "success");
                                            dataTable.reDraw();
                                        },
                                        error: function(xhr) {
                                            Swal.fire("Error!", xhr.responseJSON?.message || "Could not delete FAQ", "error");
                                        }
                                    });
                                }
                            });
                        });
                    }
                }]);

                // Custom search and filters
                dataTable.customSearchDataTable("[data-kt-table-filter='search']");
                dataTable.customizeDataTableQueryParams = () => ({
                    filters: {
                        agencyId: $("[data-kt-faq-table-filter='agency_id']").val()
                    }
                });
            }

            // Fetch FAQ data for edit modal
            async function fetchAndPopulateEditModal(faqId) {
                try {
                    const response = await fetch(`/api/FAQ/${faqId}`);
                    if (!response.ok) throw new Error("Failed to fetch FAQ");
                    const faq = await response.json();

                    $("#editFaqId").val(faq.id);
                    $("#kt_modal_edit_faq_form input[name='Question']").val(faq.question);
                    $("#kt_modal_edit_faq_form textarea[name='Answer']").val(faq.answer || "");
                    $("#editFaqAgency").val(faq.agencyName || "—");
                } catch (error) {
                    console.error("Error loading FAQ:", error);
                    Swal.fire("Error", "Could not load FAQ details.", "error");
                }
            }

            // Initialize Select2 dropdowns for Agencies
            function initializeSelect2Dropdowns() {
                select2AjaxSearchHandleListener(
                    "#kt_modal_add_faq_form select[name='AgencyId']",
                    { multiple: false },
                    "/api/Agency",
                    (params) => ({ search: params.term }),
                    (data) => ({
                        results: data.data.map(a => ({ id: a.id, text: a.name })),
                        pagination: { more: false }
                    })
                );

                select2AjaxSearchHandleListener(
                    "[data-kt-faq-table-filter='agency_id']",
                    { multiple: false },
                    "/api/Agency",
                    (params) => ({ search: params.term }),
                    (data) => ({
                        results: data.data.map(a => ({ id: a.id, text: a.name })),
                        pagination: { more: false }
                    })
                );
            }

            // Form handlers for Add/Edit
            const addFaqFormHandler = new FormSubmitHandler({
                formSelector: "#kt_modal_add_faq_form",
                submitButtonSelector: "#kt_add_faq_submit_button",
                apiEndpoint: "/api/FAQ",
                method: "POST",
                onSuccess: () => {
                    Swal.fire("Success", "FAQ created successfully!", "success");
                    $("#kt_modal_add_faq").modal("hide");
                    dataTable.reDraw();
                },
                onError: (error) => {
                    Swal.fire("Error", error.message || "Failed to create FAQ.", "error");
                }
            });

            const editFaqFormHandler = new FormSubmitHandler({
                formSelector: "#kt_modal_edit_faq_form",
                submitButtonSelector: "#kt_edit_faq_submit_button",
                apiEndpoint: "/api/FAQ", // Dynamically set
                method: "PUT",
                onSuccess: () => {
                    Swal.fire("Success", "FAQ updated successfully!", "success");
                    $("#kt_modal_edit_faq").modal("hide");
                    dataTable.reDraw();
                },
                onError: (error) => {
                    Swal.fire("Error", error.message || "Failed to update FAQ.", "error");
                },
                beforeSubmit: (formData) => {
                    const faqId = $("#editFAQId").val();
                    editFaqFormHandler.options.apiEndpoint = `/api/FAQ/${faqId}`;
                    return formData;
                }
            });

            // Filter button events
            $("[data-kt-faq-table-filter='filter']").on("click", () => dataTable.reDraw());
            $("[data-kt-faq-table-filter='reset']").on("click", () => {
                $("[data-kt-faq-table-filter='agency_id']").val("").trigger("change");
                dataTable.clearCustomFilters();
                dataTable.reDraw();
            });

            // Initialize everything
            initializeFaqsDataTable();
            initializeSelect2Dropdowns();
        });
    </script>
}