@{
    ViewData["Title"] = "Integrations";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/lib/metronic/plugins/custom/datatables/datatables.bundle.css">
    <style>
        .card {
            margin-bottom: 20px;
        }

        .badge-enabled {
            background-color: #50cd89;
            color: white;
        }

        .badge-disabled {
            background-color: #f1416c;
            color: white;
        }

        @@media (max-width: 767.98px) {
            .filter-controls .col-md-3,
            .filter-controls .col-md-4 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }
    </style>
}

<div class="card">
    <!--begin::Card header-->
    <div class="card-header border-0 pt-6">
        <!--begin::Card title-->
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <span class="svg-icon svg-icon-1 position-absolute ms-6">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1"
                            transform="rotate(45 17.0365 15.1223)" fill="black"></rect>
                        <path
                            d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z"
                            fill="black"></path>
                    </svg>
                </span>
                <input type="text" data-kt-integration-table-filter="search"
                    class="form-control form-control-solid w-250px ps-15" placeholder="Search Integrations" />
            </div>
            <!--end::Search-->
        </div>
        <!--begin::Card title-->
        <!--begin::Card toolbar-->
        <div class="card-toolbar">
            <!--begin::Toolbar-->
            <div class="d-flex justify-content-end" data-kt-integration-table-toolbar="base">
                <!--begin::Filter-->
                <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click"
                    data-kt-menu-placement="bottom-end">
                    <span class="svg-icon svg-icon-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path
                                d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z"
                                fill="black"></path>
                        </svg>
                    </span>
                    Filter
                </button>
                <!--begin::Menu 1-->
                <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true"
                    id="kt-toolbar-filter">
                    <!--begin::Header-->
                    <div class="px-7 py-5">
                        <div class="fs-4 text-dark fw-bolder">Filter Options</div>
                    </div>
                    <!--end::Header-->
                    <!--begin::Separator-->
                    <div class="separator border-gray-200"></div>
                    <!--end::Separator-->
                    <!--begin::Content-->
                    <div class="px-7 py-5">
                        <!--begin::Input group-->
                        <div class="mb-10">
                            <!--begin::Label-->
                            <label class="form-label fs-5 fw-bold mb-3">Status:</label>
                            <!--end::Label-->
                            <!--begin::Options-->
                            <div class="d-flex flex-column flex-wrap fw-bold"
                                data-kt-integration-table-filter="status">
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                    <input class="form-check-input" type="radio" name="status" value="all"
                                        checked="checked" />
                                    <span class="form-check-label text-gray-600">All</span>
                                </label>
                                <!--end::Option-->
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                    <input class="form-check-input" type="radio" name="status" value="enabled" />
                                    <span class="form-check-label text-gray-600">Enabled</span>
                                </label>
                                <!--end::Option-->
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid">
                                    <input class="form-check-input" type="radio" name="status" value="disabled" />
                                    <span class="form-check-label text-gray-600">Disabled</span>
                                </label>
                                <!--end::Option-->
                            </div>
                            <!--end::Options-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-10">
                            <!--begin::Label-->
                            <label class="form-label fs-5 fw-bold mb-3">Agency:</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <select class="form-select form-select-solid fw-bolder" 
                                data-kt-integration-table-filter="agency" data-dropdown-parent="#kt-toolbar-filter">
                                <option value="">All Agencies</option>
                                @* Agency options will be populated via JavaScript *@
                            </select>
                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-light btn-active-light-primary me-2"
                                data-kt-menu-dismiss="true" data-kt-integration-table-filter="reset">
                                Reset
                            </button>
                            <button type="submit" class="btn btn-primary" data-kt-menu-dismiss="true"
                                data-kt-integration-table-filter="filter">
                                Apply
                            </button>
                        </div>
                        <!--end::Actions-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Menu 1-->
                <!--end::Filter-->
                <!--begin::Add integration-->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#kt_modal_add_integration">
                    Add Integration
                </button>
                <!--end::Add integration-->
            </div>
            <!--end::Toolbar-->
            <!--begin::Group actions-->
            <div class="d-flex justify-content-end align-items-center d-none" data-kt-integration-table-toolbar="selected">
                <div class="fw-bolder me-5">
                    <span class="me-2" data-kt-integration-table-select="selected_count"></span>Selected
                </div>
                <button type="button" class="btn btn-danger" data-kt-integration-table-select="delete_selected">
                    Delete Selected
                </button>
            </div>
            <!--end::Group actions-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->

    <div class="card-body pt-0">
        <div class="table-responsive">
            <table id="integrations-table" class="table table-row-bordered table-stripped align-middle fs-6 gs-7 gy-5" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Agency</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Integration Modal -->
<div class="modal fade" id="kt_modal_add_integration" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder">Add New Integration</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <form id="kt_modal_add_integration_form" class="form">
                    <div class="row mb-7">
                        <label class="col-lg-4 required fw-bold fs-6">Integration Name</label>
                        <div class="col-lg-8">
                            <input type="text" name="Name" class="form-control form-control-solid" placeholder="e.g., Zendesk, Salesforce" required />
                        </div>
                    </div>
                    <div class="row mb-7">
                        <label class="col-lg-4 required fw-bold fs-6">Agency</label>
                        <div class="col-lg-8">
                            <select name="AgencyId" class="form-select form-select-solid" required>
                                <option value="">Select Agency</option>
                                @* Agency options will be populated via JavaScript *@
                            </select>
                        </div>
                    </div>
                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold fs-6">Status</label>
                        <div class="col-lg-8">
                            <div class="form-check form-switch form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" name="Enabled" id="enabledSwitch" checked="checked" />
                                <label class="form-check-label" for="enabledSwitch">
                                    Enabled
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Discard</button>
                        <button type="submit" class="btn btn-primary" id="kt_add_integration_submit">
                            <span class="indicator-label">Submit</span>
                            <span class="indicator-progress">Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Integration Modal -->
<div class="modal fade" id="kt_modal_edit_integration" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder">Edit Integration</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <form id="kt_modal_edit_integration_form" class="form">
                    <input type="hidden" name="Id" id="editIntegrationId" />
                    <div class="row mb-7">
                        <label class="col-lg-4 required fw-bold fs-6">Integration Name</label>
                        <div class="col-lg-8">
                            <input type="text" name="Name" class="form-control form-control-solid" required />
                        </div>
                    </div>
                    <div class="row mb-7">
                        <label class="col-lg-4 required fw-bold fs-6">Agency</label>
                        <div class="col-lg-8">
                            <select name="AgencyId" class="form-select form-select-solid" required data-placeholder="Select an agency">
                                @* Agency options will be populated via JavaScript *@
                            </select>
                        </div>
                    </div>
                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold fs-6">Status</label>
                        <div class="col-lg-8">
                            <div class="form-check form-switch form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" name="Enabled" id="editEnabledSwitch" />
                                <label class="form-check-label" for="editEnabledSwitch">
                                    Enabled
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold fs-6">Api Key</label>
                        <div class="col-lg-8">
                            <div class="form-check form-switch form-check-custom form-check-solid">
                                <label class="form-check-label badge badge-light-danger fs-5" id="apiKeyVal">
                                    
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center pt-15">
                        <button type="reset" class="btn btn-light me-3" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" id="kt_edit_integration_submit">
                            <span class="indicator-label">Update</span>
                            <span class="indicator-progress">Please wait...
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/metronic/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/dataTable/init.js"></script>
    <script src="~/js/forms/form-submit-handler.js"></script>
    <script src="~/js/forms/ajaxSelect2Handler.js"></script>
    <script>
        $(document).ready(function () {
            let dataTable;

            // Initialize DataTable
            function initializeIntegrationsDataTable() {
                dataTable = new DataTableSSR("/api/Integration", [
                    {
                        data: "name",
                        name: "Name",
                        render: (data) => data ? `<span class="text-gray-800 fw-bold">${data}</span>` : "—"
                    },
                    {
                        data: "agency",
                        name: "Agency",
                        render: (data) => data?.name || "—"
                    },
                    {
                        data: "enabled",
                        name: "Enabled",
                        render: (data) => {
                            const badgeClass = data ? 'badge-enabled' : 'badge-disabled';
                            const text = data ? 'Enabled' : 'Disabled';
                            return `<span class="badge ${badgeClass}">${text}</span>`;
                        }
                    },
                    {
                        data: null,
                        class: "text-end",
                        orderable: false,
                        searchable: false,
                        render: (data) => {
                            return dataTable.generateEditLinkDataTableRow("#", null, [`data-id='${data.id}'`])
                                + "  " + dataTable.generateDeleteLinkDataTableRow(data.id);
                        }
                    }
                ]);

                dataTable.initDataTableObj("#integrations-table", null, null, [{
                    event: "draw.dt",
                    action: () => {
                        dataTable.deleteRowsBtnEvents("[data-kt-docs-table-filter='delete_row']", null, 1);
                        dataTable.initialTooltip();
                        handleEditRowClickEvent();
                    }
                }]);

                // Search input
                dataTable.customSearchDataTable("[data-kt-integration-table-filter='search']");

                // Custom filters
                dataTable.customizeDataTableQueryParams = () => ({
                    filters: {
                        status: $("[data-kt-integration-table-filter='status']").val(),
                        agencyId: $("[data-kt-integration-table-filter='agency']").val()
                    }
                });
            }

            // Delegated click for edit
            function handleEditRowClickEvent() {
                $("#integrations-table tr [data-kt-docs-table-filter='edit_row']").on("click", async function () {
                    const integrationId = $(this).data("id");
                    $("#kt_modal_edit_integration").modal("show");
                    await fetchAndPopulateEditModal(integrationId);
                });
            }

            // Fetch integration data for modal
            async function fetchAndPopulateEditModal(id) {
                const modal = $("#kt_modal_edit_integration");
                modal.find(".modal-content").prepend('<div class="modal-loading-overlay"><div class="spinner-border text-primary"></div></div>');

                try {
                    const response = await fetch(`/api/integration/${id}`);
                    if (!response.ok) {
                        const err = await response.json().catch(() => ({ message: response.statusText }));
                        throw new Error(`HTTP error! ${err.message || 'Unknown error'}`);
                    }

                    const integration = await response.json();

                    $("#editIntegrationId").val(integration.id);
                    $("#kt_modal_edit_integration_form input[name='Name']").val(integration.name);
                    $("#kt_modal_edit_integration_form label#apiKeyVal").text(integration.apiKey);
                    $("#kt_modal_edit_integration_form select[name='AgencyId']").select2("trigger", "select", { data: { "text": integration?.agency?.name, "id": integration?.agency?.id }, name: integration?.agency?.name });
                    $("#editEnabledSwitch").prop("checked", integration.enabled);

                    editIntegrationFormHandler.options.apiEndpoint = "/api/integration/" + integration.id;
                } catch (error) {
                    console.error("Error fetching integration:", error);
                    Swal.fire("Error", error.message || "Could not load integration.", "error");
                } finally {
                    modal.find(".modal-loading-overlay").remove();
                }
            }

            // Initialize Select2
            function initializeSelect2Dropdowns() {
                select2AjaxSearchHandleListener(
                    "#kt_modal_add_integration_form select[name='AgencyId']",
                    { multiple: false },
                    "/api/agency",
                    (params) => ({ search: params.term }),
                    (data) => ({
                        results: data.data.map(a => ({ id: a.id, text: a.name })),
                        pagination: { more: false }
                    })
                );

                select2AjaxSearchHandleListener(
                    "#kt_modal_edit_integration_form select[name='AgencyId']",
                    { multiple: false, dropdownParent: $("#kt_modal_edit_integration_form")[0] },
                    "/api/agency",
                    (params) => ({ search: params.term }),
                    (data) => ({
                        results: data.data.map(a => ({ id: a.id, text: a.name })),
                        pagination: { more: false }
                    })
                );

                select2AjaxSearchHandleListener(
                    "[data-kt-integration-table-filter='agency']",
                    { multiple: false },
                    "/api/agency",
                    (params) => ({ search: params.term }),
                    (data) => ({
                        results: data.data.map(a => ({ id: a.id, text: a.name })),
                        pagination: { more: false }
                    })
                );
            }

            // Add integration form
            const addIntegrationFormHandler = new FormSubmitHandler({
                formSelector: "#kt_modal_add_integration_form",
                submitButtonSelector: "#kt_add_integration_submit",
                apiEndpoint: "/api/integration",
                method: "POST",
                validate: (formData) => {
                    if (!formData.Name || formData.Name.length > 100) {
                        return { isValid: false, message: "Name is required and must be less than 100 characters" };
                    }
                    return { isValid: true };
                },
                beforeSubmitData: (formData) => {
                    formData.Enabled = $("#enabledSwitch").is(":checked");
                    return formData;
                },
                onSuccess: () => {
                    Swal.fire("Success", "Integration created successfully!", "success");
                    $("#kt_modal_add_integration").modal("hide");
                    dataTable.reDraw();
                },
                onError: (error) => {
                    let message = "Failed to create integration.";
                    if (error.response?.data?.errors) {
                        message = Object.values(error.response.data.errors).flat().join("\n");
                    } else if (error.message) {
                        message = error.message;
                    }
                    Swal.fire("Error", message, "error");
                }
            });

            // Edit integration form
            const editIntegrationFormHandler = new FormSubmitHandler({
                formSelector: "#kt_modal_edit_integration_form",
                submitButtonSelector: "#kt_edit_integration_submit",
                apiEndpoint: "/api/integration",
                method: "PUT",
                getFullEndpoint: () => {
                    const id = $("#editIntegrationId").val();
                    if (!id) throw new Error("No integration ID found for editing.");
                    return `/api/integration/${id}`;
                },
                validate: (formData) => {
                    if (!formData.Name || formData.Name.length > 100) {
                        return { isValid: false, message: "Name is required and must be less than 100 characters" };
                    }
                    return { isValid: true };
                },
                beforeSubmitData: (formData) => {
                    formData.Enabled = $("#editEnabledSwitch").is(":checked");
                    return formData;
                },
                onSuccess: () => {
                    Swal.fire("Success", "Integration updated successfully!", "success");
                    $("#kt_modal_edit_integration").modal("hide");
                    dataTable.reDraw();
                },
                onError: (error) => {
                    let message = "Failed to update integration.";
                    if (error.response?.data?.errors) {
                        message = Object.values(error.response.data.errors).flat().join("\n");
                    } else if (error.message) {
                        message = error.message;
                    }
                    Swal.fire("Error", message, "error");
                }
            });

            // Filter and Reset buttons
            $("[data-kt-integration-table-filter='filter']").on("click", () => dataTable.reDraw());
            $("[data-kt-integration-table-filter='reset']").on("click", () => {
                $("[data-kt-integration-table-filter='status']").val("").trigger("change");
                $("[data-kt-integration-table-filter='agency']").val("").trigger("change");
                dataTable.clearCustomFilters();
                dataTable.reDraw();
            });

            // Init all
            initializeIntegrationsDataTable();
            initializeSelect2Dropdowns();
        });
    </script>
}
