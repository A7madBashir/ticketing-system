                                <option value="today">Today</option>
                                <option value="week">This Week</option>
                                <option value="month">This Month</option>
                                <option value="quarter">This Quarter</option>
                                <option value="year">This Year</option>
                                <option value="custom">Custom Range</option>
                            </select>
                            <!--end::Input-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group-->
                        <div class="mb-10">
                            <!--begin::Label-->
                            <label class="form-label fs-5 fw-bold mb-3">Score Range:</label>
                            <!--end::Label-->
                            <!--begin::Options-->
                            <div class="d-flex flex-column flex-wrap fw-bold"
                                data-kt-analytics-table-filter="score-range">
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                    <input class="form-check-input" type="radio" name="score-range" value="all"
                                        checked="checked" />
                                    <span class="form-check-label text-gray-600">All Scores</span>
                                </label>
                                <!--end::Option-->
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid mb-3 me-5">
                                    <input class="form-check-input" type="radio" name="score-range" value="high" />
                                    <span class="form-check-label text-gray-600">High (80-100)</span>
                                </label>
                                <!--end::Option-->
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid mb-3">
                                    <input class="form-check-input" type="radio" name="score-range" value="medium" />
                                    <span class="form-check-label text-gray-600">Medium (50-79)</span>
                                </label>
                                <!--end::Option-->
                                <!--begin::Option-->
                                <label class="form-check form-check-sm form-check-custom form-check-solid">
                                    <input class="form-check-input" type="radio" name="score-range" value="low" />
                                    <span class="form-check-label text-gray-600">Low (0-49)</span>
                                </label>
                                <!--end::Option-->
                            </div>
                            <!--end::Options-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-light btn-active-light-primary me-2"
                                data-kt-menu-dismiss="true" data-kt-analytics-table-filter="reset">
                                Reset
                            </button>
                            <button type="submit" class="btn btn-primary" data-kt-menu-dismiss="true"
                                data-kt-analytics-table-filter="filter">
                                Apply
                            </button>
                        </div>
                        <!--end::Actions-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Menu 1-->
                <!--end::Filter-->
                <!--begin::Export-->
                <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click"
                    data-kt-menu-placement="bottom-end">
                    <!--begin::Svg Icon | path: icons/duotune/arrows/arr078.svg-->
                    <span class="svg-icon svg-icon-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.3" x="12.75" y="4.25" width="12" height="2" rx="1" transform="rotate(90 12.75 4.25)" fill="black"></rect>
                            <path d="M12.0573 6.11875L13.5203 7.87435C13.9121 8.34457 14.6232 8.37683 15.056 7.94401C15.4457 7.5543 15.4641 6.92836 15.0979 6.51643L12.4974 3.59084C12.0996 3.14332 11.4004 3.14332 11.0026 3.59084L8.40206 6.51643C8.0359 6.92836 8.0543 7.5543 8.44401 7.94401C8.87683 8.37683 9.58785 8.34458 9.9797 7.87435L11.4427 6.11875C11.6026 5.92684 11.8974 5.92684 12.0573 6.11875Z" fill="black"></path>
                            <path d="M18.75 8.25H17.75C17.1977 8.25 16.75 8.69772 16.75 9.25C16.75 9.80228 17.1977 10.25 17.75 10.25C18.3023 10.25 18.75 10.6977 18.75 11.25V18.25C18.75 18.8023 18.3023 19.25 17.75 19.25H5.75C5.19772 19.25 4.75 18.8023 4.75 18.25V11.25C4.75 10.6977 5.19771 10.25 5.75 10.25C6.30229 10.25 6.75 9.80228 6.75 9.25C6.75 8.69772 6.30229 8.25 5.75 8.25H4.75C3.64543 8.25 2.75 9.14543 2.75 10.25V19.25C2.75 20.3546 3.64543 21.25 4.75 21.25H18.75C19.8546 21.25 20.75 20.3546 20.75 19.25V10.25C20.75 9.14543 19.8546 8.25 18.75 8.25Z" fill="#C4C4C4"></path>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->Export
                </button>
                <!--begin::Menu-->
                <div class="menu menu-sub menu-sub-dropdown w-200px w-md-200px" data-kt-menu="true">
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-analytics-table-export="copy">Copy to clipboard</a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-analytics-table-export="excel">Export as Excel</a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-analytics-table-export="csv">Export as CSV</a>
                    </div>
                    <!--end::Menu item-->
                    <!--begin::Menu item-->
                    <div class="menu-item px-3">
                        <a href="#" class="menu-link px-3" data-kt-analytics-table-export="pdf">Export as PDF</a>
                    </div>
                    <!--end::Menu item-->
                </div>
                <!--end::Menu-->
                <!--end::Export-->
            </div>
            <!--end::Toolbar-->
            <!--begin::Group actions-->
            <div class="d-flex justify-content-end align-items-center d-none" data-kt-analytics-table-toolbar="selected">
                <div class="fw-bolder me-5">
                    <span class="me-2" data-kt-analytics-table-select="selected_count"></span>Selected
                </div>
                <button type="button" class="btn btn-danger" data-kt-analytics-table-select="delete_selected">
                    Delete Selected
                </button>
            </div>
            <!--end::Group actions-->
        </div>
        <!--end::Card toolbar-->
    </div>
    <!--end::Card header-->

    <div class="card-body pt-0">
        <div class="table-responsive">
            <table id="analytics-table" class="table table-row-bordered table-stripped align-middle fs-6 gs-7 gy-5" style="width:100%">
                <thead>
                    <tr>
                        <th>Agent</th>
                        <th>Tickets Resolved</th>
                        <th>Avg. Response Time</th>
                        <th>Customer Score</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- View Analytics Modal -->
<div class="modal fade" id="kt_modal_view_analytics" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bolder">Analytics Details</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black" />
                        </svg>
                    </span>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Agent ID</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark" id="view-agent-id"></span>
                    </div>
                </div>
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Agency ID</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark" id="view-agency-id"></span>
                    </div>
                </div>
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Tickets Resolved</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark" id="view-tickets-resolved"></span>
                    </div>
                </div>
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Average Response Time</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark" id="view-response-time"></span>
                    </div>
                </div>
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Customer Satisfaction</label>
                    <div class="col-lg-8">
                        <div class="d-flex align-items-center">
                            <span class="fw-bolder fs-6 text-dark me-2" id="view-customer-score"></span>
                            <div class="position-relative w-100px">
                                <div class="progress h-5px">
                                    <div class="progress-bar" id="view-score-progress" role="progressbar" style="width: 0%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-7">
                    <label class="col-lg-4 fw-bold text-muted">Created Date</label>
                    <div class="col-lg-8">
                        <span class="fw-bolder fs-6 text-dark" id="view-create-time"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/metronic/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="~/js/dataTable/init.js"></script>
    <script src="~/js/forms/form-submit-handler.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var analyticsDataTable;
            
            function initializeAnalyticsDataTable() {
                analyticsDataTable = new DataTableSSR("/api/analytic", [
                    { 
                        data: "agentId", 
                        name: "AgentId",
                        render: function(data, type, row) {
                            return `<span class="text-gray-800 fw-bold">${data}</span>`;
                        }
                    },
                    { 
                        data: "ticketsResolved", 
                        name: "TicketsResolved",
                        render: function(data) {
                            return `<span class="badge badge-light-primary">${data}</span>`;
                        }
                    },
                    { 
                        data: "averageResponseTime", 
                        name: "AverageResponseTime",
                        render: function(data) {
                            // Format TimeSpan to readable format
                            const hours = Math.floor(data.totalSeconds / 3600);
                            const minutes = Math.floor((data.totalSeconds % 3600) / 60);
                            const seconds = Math.floor(data.totalSeconds % 60);
                            
                            let formatted = '';
                            if (hours > 0) formatted += `${hours}h `;
                            if (minutes > 0 || hours > 0) formatted += `${minutes}m `;
                            formatted += `${seconds}s`;
                            
                            return `<span class="text-gray-600">${formatted}</span>`;
                        }
                    },
                    { 
                        data: "customerSatisfactionScore", 
                        name: "CustomerSatisfactionScore",
                        render: function(data) {
                            let badgeClass = 'badge-light-danger';
                            if (data >= 80) badgeClass = 'badge-light-success';
                            else if (data >= 50) badgeClass = 'badge-light-warning';
                            
                            return `<span class="badge ${badgeClass}">${data}%</span>`;
                        }
                    },
                    { 
                        data: "createTime", 
                        name: "CreateTime",
                        render: function(data) {
                            return new Date(data).toLocaleDateString();
                        }
                    },
                    { 
                        data: null,
                        orderable: false,
                        render: function(data, type, row) {
                            return `
                                <button class="btn btn-sm btn-icon btn-light-primary view-btn" data-id="${row.id}" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-icon btn-light-danger delete-btn" data-id="${row.id}" title="Delete Record">
                                    <i class="bi bi-trash"></i>
                                </button>
                            `;
                        }
                    }
                ]);

                analyticsDataTable.initDataTableObj("#analytics-table", null, null, [{
                    event: "draw", 
                    action: () => {
                        // Attach event handlers after each table draw
                        attachViewAnalyticsHandlers();
                        analyticsDataTable.deleteRowsBtnEvents(".delete-btn", "/api/analytics", 0);
                    }
                }]);

                // Custom search implementation
                analyticsDataTable.customSearchDataTable("[data-kt-analytics-table-filter='search']");
            }

            // Function to attach view analytics modal handlers
            function attachViewAnalyticsHandlers() {
                $(".view-btn").on("click", function() {
                    const recordId = $(this).data("id");
                    fetchAnalyticsDetails(recordId);
                });
            }

            // Function to fetch and display analytics details
            async function fetchAnalyticsDetails(recordId) {
                try {
                    const response = await fetch(`/api/analytics/${recordId}`);
                    if (!response.ok) throw new Error('Failed to fetch analytics details');
                    
                    const data = await response.json();
                    
                    // Populate modal fields
                    $("#view-agent-id").text(data.agentId);
                    $("#view-agency-id").text(data.agencyId);
                    $("#view-tickets-resolved").text(data.ticketsResolved);
                    
                    // Format response time
                    const timeSpan = data.averageResponseTime;
                    const hours = Math.floor(timeSpan.totalSeconds / 3600);
                    const minutes = Math.floor((timeSpan.totalSeconds % 3600) / 60);
                    const seconds = Math.floor(timeSpan.totalSeconds % 60);
                    $("#view-response-time").text(`${hours}h ${minutes}m ${seconds}s`);
                    
                    // Handle customer score
                    const score = data.customerSatisfactionScore;
                    $("#view-customer-score").text(`${score}%`);
                    $("#view-score-progress").css("width", `${score}%`);
                    
                    // Set progress bar color based on score
                    if (score >= 80) {
                        $("#view-score-progress").addClass("bg-success").removeClass("bg-warning bg-danger");
                    } else if (score >= 50) {
                        $("#view-score-progress").addClass("bg-warning").removeClass("bg-success bg-danger");
                    } else {
                        $("#view-score-progress").addClass("bg-danger").removeClass("bg-success bg-warning");
                    }
                    
                    // Format create time
                    $("#view-create-time").text(new Date(data.createTime).toLocaleString());
                    
                    // Show modal
                    $("#kt_modal_view_analytics").modal("show");
                } catch (error) {
                    console.error("Error fetching analytics details:", error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to load analytics details'
                    });
                }
            }

            // Initialize the DataTable when page loads
            initializeAnalyticsDataTable();

            // Filter handler
            $("[data-kt-analytics-table-filter='filter']").on("click", function() {
                const dateRange = $("[data-kt-analytics-table-filter='date-range']").val();
                const scoreRange = $("[data-kt-analytics-table-filter='score-range'] input:checked").val();
                
                // Apply filters to DataTable
                analyticsDataTable.applyCustomFilters({
                    dateRange: dateRange,
                    scoreRange: scoreRange
                });
            });

            // Reset filter handler
            $("[data-kt-analytics-table-filter='reset']").on("click", function() {
                $("[data-kt-analytics-table-filter='date-range']").val('').trigger('change');
                $("[data-kt-analytics-table-filter='score-range'] input[value='all']").prop('checked', true).trigger('change');
                analyticsDataTable.resetFilters();
            });

            // Export handlers
            $("[data-kt-analytics-table-export='copy']").on("click", function(e) {
                e.preventDefault();
                analyticsDataTable.exportToClipboard();
            });

            $("[data-kt-analytics-table-export='excel']").on("click", function(e) {
                e.preventDefault();
                analyticsDataTable.exportToExcel("Analytics_Data");
            });

            $("[data-kt-analytics-table-export='csv']").on("click", function(e) {
                e.preventDefault();
                analyticsDataTable.exportToCSV("Analytics_Data.csv");
            });

            $("[data-kt-analytics-table-export='pdf']").on("click", function(e) {
                e.preventDefault();
                analyticsDataTable.exportToPDF("Analytics_Data");
            });
        });
    </script>
}